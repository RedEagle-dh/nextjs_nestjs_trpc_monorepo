{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"node_modules/",
			"dist/",
			"build/",
			".turbo/",
			".next/",
			".git/",
			"**/generated/**"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"bracketSpacing": true,
		"lineEnding": "lf",
		"ignore": [
			"**/node_modules/**",
			"**/dist/**",
			"**/build/**",
			"**/.turbo/**",
			"**/.next/**",
			"**/.git/**",
			"**/generated/**"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useImportType": {
					"level": "off"
				}
			}
		},
		"ignore": [
			"**/node_modules/**",
			"**/dist/**",
			"**/build/**",
			"**/.turbo/**",
			"**/.next/**",
			"**/.git/**",
			"**/generated/**"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	}
}
