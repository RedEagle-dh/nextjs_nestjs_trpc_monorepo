{
	"compilerOptions": {
		"target": "ES2022",
		"module": "commonjs",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": ".",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"composite": true,
		"baseUrl": "./"
	},
	"include": ["*.ts"],
	"exclude": ["node_modules", "dist"]
}
